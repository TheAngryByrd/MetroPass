                                    <TextBlock Text="&#xe16e;" FontFamily="{StaticResource SymbolThemeFontFamily}" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </primitivesCommon:InlineButton.Content>
                            </primitivesCommon:InlineButton>
                        </Border>
                        <Border Grid.Row="1" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">

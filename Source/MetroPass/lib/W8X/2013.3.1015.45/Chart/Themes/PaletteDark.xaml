<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Telerik.UI.Xaml.Controls.Chart.Themes">
    
    <!-- Axis -->
    
    <SolidColorBrush x:Key="TelerikChartAxisBorderBrush" Color="#59FFFFFF" />
    <SolidColorBrush x:Key="TelerikChartAxisLabelsForegroundBrush" 
                     Color="{Binding Source={StaticResource TelerikDisabledBrush}, Converter={StaticResource BrushToColorConverter}}"/>
    <SolidColorBrush x:Key="TelerikChartAxisTitleForegroundBrush" 
                     Color="{Binding Source={StaticResource TelerikSecondaryForegroundBrush}, Converter={StaticResource BrushToColorConverter}}"/>
    
    <!-- Grid -->
    
    <SolidColorBrush x:Key="TelerikChartGridLineBorderBrush" Color="#1EFFFFFF" />
    <SolidColorBrush x:Key="TelerikChartStripeBackgroundBrush" Color="#11CACACA" />
    
    <!-- Annotations -->
    
    <SolidColorBrush x:Key="TelerikChartGridLineAnnotationBorderBrush" Color="#CCFFFFFF" />
    <SolidColorBrush x:Key="TelerikChartPlotBandAnnotationBackgroundBrush" Color="#4C000000" />
    
    <!-- TrackBall -->

    <SolidColorBrush x:Key="TelerikChartTrackBallLineBorderBrush" Color="#DEFFFFFF" />
    
    <SolidColorBrush x:Key="TelerikChartTrackBallInfoBackgroundBrush" Color="#DEFFFFFF" />
    <SolidColorBrush x:Key="TelerikChartTrackBallInfoForegroundBrush" Color="#FF1D1D1D" />

</ResourceDictionary>

